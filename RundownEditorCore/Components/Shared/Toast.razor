@inject ToastState ToastState

<div class="toast-container start-50 translate-middle-x" style="top:50px;z-index:5000">
    <div class="toast align-items-center border-0 @ToastState.Color  @(ToastState.Show ? "show" : "hide")" role="alert">
        <div class="d-flex">
            <div class="toast-body">
                 @ToastState.Message
            </div>
            <button type="button" class="btn-close me-2 m-auto" @onclick="CloseToast"></button>
        </div>
    </div>
</div>


@code {
    protected override async Task OnInitializedAsync()
    {
        ToastState.OnChange += StateHasChanged;
    }

    public void CloseToast()
    {
        ToastState.Close();
    }

    public void Dispose()
    {
        ToastState.OnChange -= StateHasChanged;
    }
}
